{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "baseUrl": "./src",
        "rootDir": "./src",
        "outDir": "./build",
        "paths": {
            "app": [
                "app/"
            ]
        },
        "types": [
            "core-js",
            "reflect-metadata"
        ]
    },
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "useWebpackText": true
    },
    "exclude": [
        "build",
        "node_modules"
    ]
}
